<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/primaryColor"
            app:titleTextColor="@color/onPrimary"
            app:navigationIconTint="@color/onPrimary"
            app:titleCentered="true"
            app:title="VitalPress" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Bienvenida y logout -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/primaryColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/avatar_desc"
                        android:src="@mipmap/ic_launcher_round" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_text"
                            android:textColor="@color/onPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTodayDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/onPrimary"
                            android:textSize="12sp"
                            android:alpha="0.8"
                            tools:text="Lunes, 10 de diciembre" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnLogout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/logout_desc"
                        android:src="@android:drawable/ic_lock_power_off"
                        app:tint="@color/onPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón principal: Nueva medición (más prominente) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fabAdd"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/btn_new_measure"
                android:textSize="16sp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:textAlignment="center"
                app:backgroundTint="@color/primaryColor"
                app:icon="@drawable/ic_add_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="@color/onPrimary" />

            <!-- Resumen rápido -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickSummary"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_summary_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface" />

                    <TextView
                        android:id="@+id/tvMeasurementsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="13sp"
                        tools:text="Mediciones realizadas: 12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAvgSystolic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/onSurface"
                                android:textSize="14sp"
                                tools:text="Prom. sistólica: 120 mmHg" />

                            <TextView
                                android:id="@+id/tvAvgDiastolic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/onSurface"
                                android:textSize="14sp"
                                tools:text="Prom. diastólica: 80 mmHg" />

                            <TextView
                                android:id="@+id/tvAvgHeartRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/onSurface"
                                android:textSize="14sp"
                                tools:text="Prom. FC: 72 bpm" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Última medición -->
            <TextView
                android:id="@+id/tvEmptyToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/empty_today"
                android:textAlignment="center"
                android:textColor="@color/textSecondary"
                android:textSize="14sp"
                android:padding="24dp"
                android:visibility="gone" />

            <include
                android:id="@+id/includeLastMeasure"
                layout="@layout/include_last_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <!-- Gráfico de tendencia -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTrendChart"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trend_chart_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface" />

                    <!-- Gráfico real de tendencia usando MPAndroidChart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChartTrend"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp" />

                    <!-- Texto placeholder (se oculta cuando hay datos) -->
                    <TextView
                        android:id="@+id/tvTrendPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/backgroundColor"
                        android:gravity="center"
                        android:text="📊 Gráfico de tendencia\n(Se mostrará después de 3+ mediciones)"
                        android:textAlignment="center"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Perfil: IMC y edad -->
            <TextView
                android:id="@+id/tvProfileHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile_hint"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBmiAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:gravity="center"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="IMC: 23.5 (Normal) · Edad: 30" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/btn_edit_profile"
                android:visibility="gone" />

            <!-- Acciones rápidas mejoradas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/quick_actions_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface" />

            <!-- Fila 1: Historial y Estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHistory"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            app:tint="@color/primaryColor"
                            android:contentDescription="@string/history_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/menu_history_title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStats"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/secondaryColor"
                            android:contentDescription="@string/stats_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/menu_stats_title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Fila 2: Exportar y Comparar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExport"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/primaryColor"
                            android:contentDescription="@string/btn_export_data" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/btn_export_data"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCompare"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_dialog_dialer"
                            app:tint="@color/secondaryColor"
                            android:contentDescription="@string/btn_compare_records" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/btn_compare_records"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Fila 3: Recordatorio y Metas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReminder"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="@color/primaryColor"
                            android:contentDescription="@string/btn_set_reminder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/btn_set_reminder"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGoals"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/star_big_on"
                            app:tint="@color/secondaryColor"
                            android:contentDescription="@string/btn_goals" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/btn_goals"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Banner de salud (movido más abajo) -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/ivHealthBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/banner_health_desc"
                    android:src="@drawable/ic_health_illustration" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Estadísticas semanales -->
            <TextView
                android:id="@+id/tvWeeklyStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@color/backgroundColor"
                android:gravity="center"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="Promedio semanal: 120/80 mmHg, 72 lpm" />

            <!-- Tips de medición -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTips"
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tips_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface" />

                    <TextView
                        android:id="@+id/tvTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/tips_list"
                        android:textColor="@color/textSecondary"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recomendaciones personalizadas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecommendations"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/secondaryColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvApiTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/api_recommendations_title"
                        android:textColor="@color/onSecondary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvApiBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/api_recommendations_empty"
                        android:textColor="@color/onSecondary"
                        android:textSize="13sp"
                        android:alpha="0.9"
                        tools:text="Mantenga una alimentación balanceada y evite el exceso de sal..." />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMoreTips"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_more_recommendations"
                        android:textColor="@color/onSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Espaciado final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        android:background="@color/backgroundColor"
        app:itemIconTint="@color/primaryColor"
        app:itemTextColor="@color/primaryColor" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
