<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsFragment"
    android:padding="@dimen/space_lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_no_records"
            android:textAlignment="center"
            android:textStyle="bold"
            style="@style/App.Text.BodySecondary"
            android:visibility="gone"/>

        <!-- Card Promedios -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAverages"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_averages"
                    style="@style/App.Text.TitleMedium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_md">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAvgPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            tools:text="126/80"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_pressure_label"
                            style="@style/App.Text.BodySecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAvgPulse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            tools:text="75"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_pulse_label"
                            style="@style/App.Text.BodySecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTrend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="↘ Bajando"
                    android:textColor="@color/bp_green"
                    android:layout_marginTop="@dimen/space_sm"/>

                <TextView
                    android:id="@+id/tvBasedOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Basado en 5 mediciones"
                    style="@style/App.Text.BodySecondary"
                    android:layout_marginTop="@dimen/space_xs"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Distribución por Categoría -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDistribution"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_distribution_title"
                    style="@style/App.Text.TitleMedium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_md">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipNormal"
                        style="@style/App.Chip.Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_normal"
                        android:clickable="false"
                        android:focusable="false"
                        app:backgroundTint="@color/bp_green"
                        android:textColor="@color/onSecondary"/>

                    <TextView
                        android:id="@+id/tvDistNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_sm"
                        tools:text="3 (60%)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_sm">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipElevada"
                        style="@style/App.Chip.Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_elevada"
                        android:clickable="false"
                        android:focusable="false"
                        app:backgroundTint="@color/bp_yellow"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvDistElevada"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_sm"
                        tools:text="1 (20%)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_sm">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipHip"
                        style="@style/App.Chip.Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_hipertension"
                        android:clickable="false"
                        android:focusable="false"
                        app:backgroundTint="@color/bp_red"
                        android:textColor="@color/onSecondary"/>

                    <TextView
                        android:id="@+id/tvDistHip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_sm"
                        tools:text="1 (20%)"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tendencia de Presión (un solo chart) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTrend"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_trend_title"
                    style="@style/App.Text.TitleMedium"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartTrend"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Indicadores de Salud (estático) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIndicators"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:layout_marginBottom="@dimen/space_xl"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_indicators_title"
                    style="@style/App.Text.TitleMedium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_md"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/category_normal"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/App.Text.BodySecondary" android:text="@string/indicator_normal_threshold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/category_elevada"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/App.Text.BodySecondary" android:text="@string/indicator_elevada_threshold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/category_hipertension"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/App.Text.BodySecondary" android:text="@string/indicator_hipertension_threshold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
