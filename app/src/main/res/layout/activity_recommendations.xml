<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationsActivity"
    android:padding="@dimen/space_lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:background="@color/primaryColor"
            app:navigationIconTint="@color/onPrimary"
            app:titleTextColor="@color/onPrimary"
            app:titleCentered="true"
            app:title="Recomendaciones" />

        <!-- Card resumen con badge y recomendación -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSummary"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivBadgeDot"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:tint="@color/bp_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/space_md">
                        <TextView
                            android:id="@+id/tvAssistantTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/App.Text.TitleMedium"
                            android:text="@string/assistant_title" />
                        <TextView
                            android:id="@+id/tvAssistantSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/App.Text.BodySecondary"
                            android:text="@string/assistant_subtitle" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_normal"
                        android:paddingStart="@dimen/space_md"
                        android:paddingEnd="@dimen/space_md"
                        android:paddingTop="@dimen/space_sm"
                        android:paddingBottom="@dimen/space_sm"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRecBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    tools:text="¡Excelente! Tu presión está en rango normal. Mantén hábitos saludables."
                    android:textColor="@color/onSurface" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressRec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetry"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_retry"
                    android:layout_marginTop="@dimen/space_md"
                    android:visibility="gone" />

                <!-- Tarjeta con última medición -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    app:cardCornerRadius="@dimen/corner_md"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_lg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tvLastTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/last_measure"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvBadgeInner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/category_normal"
                                android:textStyle="bold"
                                android:textColor="@color/bp_green" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLastValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="120/80 mmHg"
                            android:textSize="18sp"
                            android:layout_marginTop="@dimen/space_sm" />

                        <TextView
                            android:id="@+id/tvLastPulse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="72 lpm"
                            style="@style/App.Text.BodySecondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Consejos rápidos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuickTips"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/App.Text.TitleMedium"
                    android:text="@string/quick_tips_title" />

                <!-- fila 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_md"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:tint="@color/primaryColor" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_md"
                        android:text="@string/quick_tip_reduce_salt" />
                </LinearLayout>

                <!-- fila 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_md"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="@color/secondaryColor" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_md"
                        android:text="@string/quick_tip_activity" />
                </LinearLayout>

                <!-- fila 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_md"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_week"
                        android:tint="@color/primaryColor" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/space_md"
                        android:text="@string/quick_tip_caffeine" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMore"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_sm"
                    android:text="@string/btn_more_tips"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Alerta de emergencia -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmergency"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            app:cardCornerRadius="@dimen/corner_md"
            app:strokeWidth="1dp"
            app:strokeColor="@color/bp_red">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        android:tint="@color/bp_red" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/space_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emergency_title"
                            android:textStyle="bold"
                            android:textColor="@color/bp_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emergency_body" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmergencyCall"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:text="@string/btn_call"
                    android:textColor="@color/bp_red"
                    app:icon="@android:drawable/ic_menu_call"
                    app:iconTint="@color/bp_red"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/bp_red"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
