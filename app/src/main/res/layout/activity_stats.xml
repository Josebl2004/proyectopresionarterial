<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/primaryColor"
            app:titleTextColor="@color/onPrimary"
            app:navigationIconTint="@color/onPrimary"
            app:titleCentered="true"
            app:title="Estadísticas" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <!-- Mensaje sin datos -->
            <TextView
                android:id="@+id/tvNoStatsData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/space_lg"
                android:text="@string/no_data_available"
                android:textColor="@color/textSecondary"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Controles de rango de tiempo -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleTimeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:singleSelection="true"
                app:checkedButton="@id/btnWeek">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWeek"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/period_week"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMonth"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/period_month"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnYear"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/period_year"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAll"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/period_all"
                    android:textSize="12sp" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Card de resumen con promedios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardCornerRadius="@dimen/corner_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_lg">

                    <TextView
                        android:id="@+id/tvAverageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_averages"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/space_md" />

                    <!-- Fila de promedios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Sistólica -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/systolic"
                                android:textColor="@color/textSecondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAvgSystolic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/systolic_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="120" />
                        </LinearLayout>

                        <!-- Diastólica -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/diastolic"
                                android:textColor="@color/textSecondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAvgDiastolic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/diastolic_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="80" />
                        </LinearLayout>

                        <!-- Frecuencia cardíaca -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/heart_rate"
                                android:textColor="@color/textSecondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAvgHeartRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/heart_rate_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="72" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tendencia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tendencia: "
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="Estable" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tabs para tipos de gráficos -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutChartType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_trend_title" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semanal" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_distribution_title" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combinado" />
            </com.google.android.material.tabs.TabLayout>

            <!-- Card con gráficos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChart"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_md">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="@dimen/space_md">

                    <!-- Gráfico de líneas (Tendencia) -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChartTrend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Gráfico de barras (Semanal) -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartWeekly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!-- Gráfico de pastel (Distribución) -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartDistribution"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!-- Gráfico combinado -->
                    <com.github.mikephil.charting.charts.CombinedChart
                        android:id="@+id/combinedChartAll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
