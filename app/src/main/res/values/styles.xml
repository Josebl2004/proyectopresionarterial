<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tipografía principal -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Botón Material 3 redondeado y elevado -->
    <style name="Widget.Material3.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Button.Rounded</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <!-- Botón secundario -->
    <style name="Widget.Material3.Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Button.Rounded</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <!-- CardView base para Material 3 -->
    <style name="Widget.Material3.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surfaceColor</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.CardView.Rounded</item>
    </style>

    <!-- CardView Material 3 -->
    <style name="Widget.Material3.CardView.Elevated" parent="Widget.Material3.MaterialCardView">
        <item name="cardBackgroundColor">@color/surfaceColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.CardView.Rounded</item>
    </style>

    <!-- Textos secundarios -->
    <style name="Text.Secondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Título de sección -->
    <style name="Text.SectionTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo base para todos los textos de la app -->
    <style name="App.Text" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <!-- Estilos de texto para la App -->
    <style name="App.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="App.Text.BodySecondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="App.Text.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo base para todos los componentes de la app -->
    <style name="App"/>

    <!-- Estilo reutilizable para chips de estado -->
    <style name="App.Chip.Status" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Material3.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.Material3.CardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
